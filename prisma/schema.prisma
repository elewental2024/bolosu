// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  whatsapp  String    @unique
  cpf       String    @unique
  name      String
  role      String    @default("client")
  pin       String?   // 4-digit PIN hash
  orders    Order[]
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Product {
  id           String      @id @default(cuid())
  name         String
  description  String
  price        Float
  instagramUrl String
  imageUrl     String?
  active       Boolean     @default(true)
  orderItems   OrderItem[]
  createdAt    DateTime    @default(now())
}

model Order {
  id                String      @id @default(cuid())
  userId            String
  user              User        @relation(fields: [userId], references: [id])
  status            String      @default("PENDING") // PENDING, NEGOTIATING, AWAITING_PAYMENT, PAID, COMPLETED, CANCELLED
  deliveryAddress   String
  deliveryDate      DateTime
  deliveryTime      String?     // Horário separado como string (ex: "14:00")
  observations      String?
  deliveryFee       Float?
  totalPrice        Float?
  originalPrice     Float       // Preço inicial calculado
  negotiatedPrice   Float?      // Preço após negociação
  priceHistory      String?     // JSON array de histórico de alterações
  agreedAt          DateTime?   // Quando acordo foi fechado
  agreedByCustomer  Boolean     @default(false)
  agreedByAdmin     Boolean     @default(false)
  items             OrderItem[]
  messages          Message[]
  logs              OrderLog[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Message {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model OrderLog {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  type      String   // "ORDER_CREATED", "MESSAGE_SENT", "PRICE_UPDATED", "STATUS_CHANGED", "WHATSAPP_SENT", "AGREEMENT_CONFIRMED"
  actor     String   // "CUSTOMER", "ADMIN", "SYSTEM"
  content   String
  metadata  String?  // JSON com dados adicionais
  createdAt DateTime @default(now())
  
  @@index([orderId])
  @@index([createdAt])
}
